{
  "name": "tieliikennevideowall",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Tieliikenne video wall using Finnish Digitraffic traffic cameras (Vite + React + Tailwind)",
  "homepage": "https://krugou.github.io/tieliikennevideowall/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "postbuild": "node ./scripts/copyIndexTo404.js",
    "preview": "vite preview --port 4173",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ./src/**/*.{ts,tsx,js,jsx} --fix",
    "lint:ci": "eslint ./src/**/*.{ts,tsx,js,jsx}",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "i18next": "^25.7.3",
    "leaflet": "^1.9.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,scss,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.19"
  },
  "license": "MIT"
}
